extends ../layouts/main

block content
	div(class="large-8 columns")
		if update
			h2 Update "#{tag.name}"
		else
			h2 Add Tag

		ul.breadcrumbs
			li
				a(href="/") Melone
			li
				a(href="/tags") Tags
			li.current
				a(href="/tags/add") Add

		form(method="post")
			| !{form}
			button(type="submit", class="button")
				if update
					i.foundicon-checkmark
					span Update Tag
				else
					i.foundicon-checkmark
					span Create Tag
	div(class="large-4 columns")